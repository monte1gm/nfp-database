rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    match /users/{uid} {

      // Allow user to read their own doc (if exists)
      allow get: if isOwner(uid);
      allow list: if false;

      // Allow FIRST login creation only
      allow create: if isOwner(uid)
        && !exists(/databases/$(database)/documents/users/$(uid))
        && request.resource.data.role == "user"
        && request.resource.data.enabled == false;

      // Allow safe updates (refresh lastLoginAt etc)
      allow update: if isOwner(uid)
        && exists(/databases/$(database)/documents/users/$(uid))
        && request.resource.data.role == resource.data.role
        && request.resource.data.enabled == resource.data.enabled
        && request.resource.data.createdAt == resource.data.createdAt;

      allow delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
